<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kalkulator Toko Online</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; max-width: 600px; margin: auto; }
        h2 { text-align: center; }
        label { font-weight: bold; margin-top: 10px; display: block; }
        input, select { width: 100%; padding: 8px; margin-top: 5px; }
        button { margin-top: 15px; width: 100%; padding: 10px; font-size: 16px; }
        .result { background: #f0f0f0; padding: 10px; margin-top: 20px; border-radius: 5px; }
    </style>
</head>
<body>
    <h2>Kalkulator Keuntungan Toko Online</h2>

    <label>Harga Jual (Rp)</label>
    <input type="number" id="hargaJual" placeholder="Misal: 100000">

    <label>Modal Barang (Rp)</label>
    <input type="number" id="modal" placeholder="Misal: 60000">

    <label>Platform / Aplikasi</label>
    <select id="platform">
        <option value="10">Shopee (10%)</option>
        <option value="8">Tokopedia (8%)</option>
        <option value="12">Lazada (12%)</option>
        <option value="5">Website Pribadi (5%)</option>
    </select>

    <label>Biaya Fee Event (%)</label>
    <input type="number" id="feeEvent" placeholder="Misal: 5">

    <button onclick="hitung()">Hitung Keuntungan</button>

    <div class="result" id="hasil"></div>

    <h2>Hitung Harga Jual Berdasarkan Keuntungan Diinginkan</h2>

    <label>Keuntungan Yang Diinginkan (Rp)</label>
    <input type="number" id="keuntunganDiinginkan" placeholder="Misal: 20000">

    <button onclick="hitungHargaJual()">Hitung Harga Jual</button>

    <div class="result" id="hasilHargaJual"></div>

    <script>
        function hitung() {
            let hargaJual = Number(document.getElementById("hargaJual").value);
            let modal = Number(document.getElementById("modal").value);
            let platformFee = Number(document.getElementById("platform").value);
            let feeEvent = Number(document.getElementById("feeEvent").value);

            let totalFeePersen = (platformFee + feeEvent) / 100;
            let totalFee = hargaJual * totalFeePersen;
            let keuntungan = hargaJual - modal - totalFee;

            document.getElementById("hasil").innerHTML = `
                <b>Hasil Perhitungan:</b><br>
                Total Biaya Fee: Rp ${totalFee.toLocaleString()}<br>
                Keuntungan Bersih: Rp ${keuntungan.toLocaleString()}
            `;
        }

        function hitungHargaJual() {
            let modal = Number(document.getElementById("modal").value);
            let platformFee = Number(document.getElementById("platform").value);
            let feeEvent = Number(document.getElementById("feeEvent").value);
            let keuntunganDiinginkan = Number(document.getElementById("keuntunganDiinginkan").value);

            let totalFeePersen = (platformFee + feeEvent) / 100;

            let hargaJual = (modal + keuntunganDiinginkan) / (1 - totalFeePersen);

            document.getElementById("hasilHargaJual").innerHTML = `
                <b>Harga Jual yang Disarankan:</b><br>
                Rp ${Math.ceil(hargaJual).toLocaleString()}
            `;
        }
    </script>
</body>
</html>
